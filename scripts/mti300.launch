<launch>

  <arg name="port" default="/dev/ttyUSB0" />
  <arg name="baudrate" default="115200" />
  <arg name="mode" default="2" />
  <arg name="frequency" default="100" />
  
  <node pkg="xsens_driver" type="mtdevice.py" name="mtdevice" args="-d $(arg port) -m $(arg mode) -f $(arg frequency)" />

  <node pkg="xsens_driver" type="mtnode.py" name="mtnode">
    <param name="device" value="$(arg port)" />
    <param name="baudrate" value="$(arg baudrate)" />
  </node>

</launch>
